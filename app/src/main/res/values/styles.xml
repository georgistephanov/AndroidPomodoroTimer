<resources>

	<!-- Main application theme. -->
	<style name="AppTheme" parent="android:Theme.Material.Light">
		<!-- Customize your theme here. -->
		<item name="android:colorPrimary">@color/colorPrimary</item>
		<item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="android:colorAccent">@color/colorAccent</item>
		<item name="android:textColorPrimary">@color/black</item>
		<item name="android:textColorSecondary">@color/gray</item>
		<item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
	</style>

	<style name="AppTheme.ActionBarStyle" parent="@android:style/Widget.Material.Light.ActionBar">
		<item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
		<item name="android:background">@color/colorPrimary</item>
	</style>

	<style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="PopupMenu" parent="android:Widget.Material.PopupMenu.Overflow">
		<item name="android:textColor">@color/gray</item>
	</style>

	<style name="DarkTheme" parent="android:Theme.Material">
		<item name="android:colorPrimary">@color/darkPrimary</item>
		<item name="android:colorPrimaryDark">@color/darkPrimaryDark</item>
		<item name="android:colorAccent">@color/darkAccent</item>
		<item name="android:textColorPrimary">@color/white</item>
		<item name="android:textColorSecondary">@color/white</item>
	</style>


	<style name="timer">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="buttons">
		<item name="android:layout_width">@dimen/roundButton_size</item>
		<item name="android:layout_height">@dimen/roundButton_size</item>
		<item name="android:layout_marginBottom">@dimen/button_marginBottom</item>
		<item name="android:background">@drawable/circle_button</item>
		<item name="android:tint">@color/white</item>
	</style>

	<style name="widget_buttons">
		<item name="android:layout_width">@dimen/widget_roundButton_size</item>
		<item name="android:layout_height">@dimen/widget_roundButton_size</item>
		<item name="android:background">@drawable/circle_button</item>
		<item name="android:tint">@color/white</item>
		<item name="android:backgroundTint">#FD6860</item>
		<item name="android:layout_centerVertical">true</item>
	</style>
</resources>
