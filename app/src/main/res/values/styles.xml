<resources>

	<!-- No status bar application theme. -->
	<style name="AppTheme" parent="android:Theme.Material.Light">
		<!-- Customize your theme here. -->
		<item name="android:colorPrimary">@color/colorPrimary</item>
		<item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="android:colorAccent">@color/colorAccent</item>
		<item name="android:textColorPrimary">@color/white</item>
	</style>

	<style name="PopupMenu" parent="android:Widget.Material.PopupMenu.Overflow">
		<item name="android:textColor">@color/gray</item>
	</style>

	<style name="timer">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="buttons">
		<item name="android:layout_width">@dimen/roundButton_size</item>
		<item name="android:layout_height">@dimen/roundButton_size</item>
		<item name="android:layout_marginBottom">@dimen/button_marginBottom</item>
		<item name="android:background">@drawable/circle_button</item>
		<item name="android:tint">@color/white</item>
	</style>
</resources>
